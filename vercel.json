{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/main_flask.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/main_flask.py"
    },
    {
      "src": "/((?!assets/|.*\\..*).*)",
      "dest": "/index.html"
    }
  ],
  "framework": null,
  "installCommand": "npm ci",
  "buildCommand": "npm run build"
}
