{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/main_flask.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "includeFiles": [
          "backend/**/*.py",
          "backend/prompts/**/*",
          "backend/sample_prompts/**/*",
          "backend/requirements.txt"
        ]
      }
    }
  ],
  "functions": {
    "backend/main_flask.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/main_flask.py"
    },
    {
      "src": "/((?!api/).*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9",
    "PYTHONPATH": "/var/task/backend",
    "FLASK_ENV": "production",
    "FLASK_DEBUG": "0",
    "CORS_ALLOW_ORIGIN": "*"
  },
  "framework": null,
  "installCommand": "npm ci",
  "buildCommand": "npm run build"
}